{
    "name": "skeleton-base-ts-sveltekit",
    "author": {
        "name": "digi4care",
        "url": "https://github.com/digi4care"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/digi4care/base-ts-sveltekit.git",
        "directory": "apps/www"
    },
    "private": true,
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "sync": "svelte-kit sync",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier . --check . && eslint .",
        "format:write": "prettier . --write .",
        "format:check": "prettier . --check .",
        "houdini:generate": "houdini generate",
        "houdini:pull-schema": "houdini pull-schema"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^3.1.1",
        "@sveltejs/kit": "^2.5.0",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.35.1",
        "houdini": "^1.2.36",
        "houdini-svelte": "^1.2.36",
        "npm-check-updates": "^16.14.14",
        "prettier": "^3.2.4",
        "prettier-plugin-svelte": "^3.1.2",
        "svelte": "^4.2.9",
        "svelte-check": "^3.6.3",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    },
    "type": "module"
}
